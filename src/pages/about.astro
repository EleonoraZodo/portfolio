<!DOCTYPE html>
---
const pageTitle = "About Me";
---
<html lang="en">

<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width", initial-scale="1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" integrity="sha256-46qynGAkLSFpVbEBog43gvNhfrOj+BmwXdxFgVK/Kvc=" crossorigin="anonymous" />  
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400&display=swap">
    <title>{pageTitle}</title>
    <style>
        body {
            font-family: 'Roboto Mono', monospace;
            margin: 0;
            padding: 0;
            background-color: #fff; /* Set background color to white */
            
        }

    <style>
        body {
            font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
            margin: 0;
            padding: 0;
            background-color: #fff; /* Set background color to white */
        }

        .accordion {
            width: 800px;
            margin-left: 20px;
            margin-top: 20px;
        }

        .accordion-section {
            border: 1px solid #ccc;
            margin-bottom: 5px;
            overflow: hidden;
        }

        .accordion-header {
            background-color: #fffbfb;
            color: #1a1919;
            padding: 10px;
            cursor: pointer;
            position: relative;
            border: none; /* Remove border */
        }

        .arrow {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%) rotate(0deg); /* Default rotation set to 0deg (downwards) */
            transition: transform 0.3s ease;
        }

        .accordion-section.active .arrow {
            transform: translateY(-50%) rotate(180deg); /* Rotate 180deg for upwards arrow when active */
        }

        .accordion-content {
            padding: 10px;
            display: none;
            line-height: 1.5; /* Set line-height to increase space between lines */
        }

        .accordion-section.active .accordion-content {
            display: block;
        }

        .content-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="content-container">
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/blog/">Blog</a>
        <h1>{pageTitle}</h1>
        
        <div class="accordion">
            <div class="accordion-section">
                <div class="accordion-header">
                    Bio
                    <span class="arrow">&#9660;</span>
                </div>
                <div class="accordion-content">
                    <ul>
                        <li>I’m a young graduate in Human-Computer Interaction</li>
                        <li>I have worked & studied in Italy, Germany, and Austria.</li>
                        <li>I speak IT, EN & DE fluently + I’m learning Mandarin.</li>
                        <li>I’m a webdev newbie (HTML, CSS, JS).</li>
                        <li>I’m into outdoor sports & community projects.</li>
                    </ul>
                </div>
            </div>

            <div class="accordion-section">
                <div class="accordion-header">
                    Section 2
                    <span class="arrow">&#9660;</span>
                </div>
                <div class="accordion-content">
                    <p>Content for section 2 goes here.</p>
                </div>
            </div>

            <div class="accordion-section">
                <div class="accordion-header">
                    Section 3
                    <span class="arrow">&#9660;</span>
                </div>
                <div class="accordion-content">
                    <p>Content for section 3 goes here.</p>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const accordionHeaders = document.querySelectorAll('.accordion-header');

                accordionHeaders.forEach(header => {
                    header.addEventListener('click', function () {
                        const accordionSection = this.parentNode;
                        accordionSection.classList.toggle('active');

                        const isActive = accordionSection.classList.contains('active');
                        const content = accordionSection.querySelector('.accordion-content');
                        const arrow = accordionSection.querySelector('.arrow');

                        if (isActive) {
                            content.style.display = 'block';
                            arrow.innerHTML = '&#9650;'; // Upwards arrow
                        } else {
                            content.style.display = 'none';
                            arrow.innerHTML = '&#9660;'; // Downwards arrow
                        }
                    });
                });
            });
        </script>
    </div>
</body>

</html>
